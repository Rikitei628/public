<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <%- include("./common/head", {title: "予約"}) %>
    <link rel="stylesheet" href="/style/reserve.css" />
    <style>
      .theme--light.v-application {
        background: transparent;
        color: inherit;
      }
      .v-application {
        font-family: inherit;
      }
    </style>
  </head>
  <body>
    <%- include("./common/header", {active:"reserve"}) %>

    <div id="app">
      <v-app dark>
        <v-main dark>
          <v-container fluid dark>
            <div class="main">
              <div class="container">
                <h3 class="section-title">予約</h3>
                <div class="contents-item1">
                  <p>やき鳥　りき亭　オンライン予約</p>
                </div>
                <!-- <div class="orange darken-3 pa-5">
                    文字: <span id="test1">最初の文字</span>
                    <div onclick="clicked1()">ここを押す</div>
                </div>
                <span id="test2">最初の文字</span> -->
                <v-card>
                  <!-- 以下予約ステップ -->
                  <v-card-text>
                    <v-stepper v-model="e1">
                      <!-- ステップ内のヘッダー -->
                      <v-stepper-header>
                        <v-stepper-step :complete="e1 > 1" step="1">
                          お客様情報を入力
                        </v-stepper-step>

                        <v-divider></v-divider>

                        <v-stepper-step :complete="e1 > 2" step="2">
                          ご来店日時を入力
                        </v-stepper-step>

                        <v-divider></v-divider>

                        <v-stepper-step step="3">
                          メニューを選択
                        </v-stepper-step>
                      </v-stepper-header>
                      <!-- ステップ1：お客様情報入力欄 -->
                      <v-stepper-items>
                        <v-stepper-content step="1">
                          <v-card class="mb-12" height="200px" flat>
                            <p style="font-size: 15px">
                              以下お客様の情報をご入力ください。
                            </p>
                            <v-text-field
                              v-model="inputNameText"
                              outlined
                              hide-details="auto"
                              label="(必須)お名前"
                              placeholder="山田　太郎"
                            ></v-text-field>
                            <v-text-field
                              v-model="inputTellText"
                              outlined
                              hide-details="auto"
                              label="(必須)電話番号"
                              placeholder="(半角)090-****-****"
                              class="mt-3"
                            ></v-text-field>
                          </v-card>
                          <!-- 以下進むボタン -->
                          <v-btn color="primary" @click="step1Next()">
                            次に進む
                          </v-btn>
                        </v-stepper-content>
                        <!-- ステップ2：来店日時選択 -->
                        <v-stepper-content step="2">
                          <v-card class="mb-12" height="600px" flat>
                            <!-- カレンダー選択 -->
                            <p style="font-size: 15px; font-weight: bold">
                              1. お持ち帰りの日程を選択。
                            </p>
                            <v-row>
                              <v-date-picker
                                v-model="date"
                                :allowed-dates="allowedDates"
                                class="mt-4"
                                min="2021-08-01"
                                max="2023-12-31"
                                locale="jp-ja"
                                :day-format="date => new Date(date).getDate()"
                              ></v-date-picker>
                            </v-row>
                            <!-- 時間選択 -->
                            <br />
                            <p style="font-size: 15px; font-weight: bold">
                              2. お持ち帰りの時間を選択。
                            </p>
                            <v-container fluid>
                              <v-row align="center">
                                <v-col class="time" cols="12" sm="6">
                                  <v-select
                                    v-model="timeSelect"
                                    :items="times"
                                    label="時間をお選び下さい。"
                                  ></v-select>
                                </v-col>
                              </v-row>
                            </v-container>
                          </v-card>
                          <!-- 以下各ボタン -->
                          <v-btn color="primary" @click="step2Next()">
                            次に進む
                          </v-btn>

                          <v-btn text @click="e1 = 1"> キャンセル </v-btn>
                        </v-stepper-content>
                        <!-- ステップ3：メニュー選択 -->
                        <v-stepper-content step="3">
                          <v-card class="mb-12" flat>
                            <v-row dense>
                              <v-col cols="12" md="7" class="order-md-first">
                                <!-- メニューのセレクト -->
                                <p style="font-size: 20px; padding-left: 15px">
                                  メニューをお選び下さい。
                                </p>
                                <v-select
                                  v-model="menuSelect"
                                  :items="items_menu"
                                  label="メニューをお選び下さい。"
                                ></v-select>
                                <!-- 数量のセレクト -->
                                <p style="font-size: 20px; padding-left: 15px">
                                  数量
                                </p>
                                <v-select
                                  v-model="numberSelect"
                                  :items="items_numbers"
                                  label="数量をお選び下さい。"
                                ></v-select>
                                <div class="text-right">
                                  <v-btn
                                    @click="addItemToCard()"
                                    color="primary"
                                  >
                                    <v-icon left> mdi-plus</v-icon>
                                    追加
                                  </v-btn>
                                </div>
                              </v-col>
                              <!-- メニュー表示テーブル -->
                              <v-col cols="12" md="5">
                                <div>追加済みのメニュー</div>
                                <div>
                                  <v-simple-table dense>
                                    <template v-slot:default>
                                      <thead>
                                        <tr>
                                          <th>メニュー名</th>
                                          <th>数量</th>
                                          <th></th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        <tr v-if="menus.length == 0">
                                          <td colspan="3">
                                            何も追加されていません。
                                          </td>
                                        </tr>
                                        <tr v-for="(menu,i) in menus" :key="i">
                                          <td>{{ menu.name }}</td>
                                          <td>{{ menu.count }}</td>
                                          <td></td>
                                          <td>
                                            <v-btn
                                              @click="menus.splice(i,1)"
                                              outlined
                                              small
                                            >
                                              削除
                                            </v-btn>
                                          </td>
                                        </tr>
                                      </tbody>
                                    </template>
                                  </v-simple-table>
                                </div>
                              </v-col>
                            </v-row>
                          </v-card>
                          <!-- 以下各ボタン -->
                          <v-row justify="space-around">
                            <v-col cols="auto">
                              <v-dialog
                                transition="dialog-top-transition"
                                max-width="600"
                                v-model="isOpenDialog"
                              >
                                <template v-slot:default="dialog">
                                  <v-card>
                                    <v-toolbar color="primary" dark
                                      >ご入力内容をご確認下さい。</v-toolbar
                                    >
                                    <v-card-text>
                                      <div class="pa-2">
                                        名前: {{ inputNameText }}
                                      </div>
                                      <div class="pa-2">
                                        電話番号: {{ inputTellText }}
                                      </div>
                                      <div class="pa-2">日程: {{ date }}</div>
                                      <div class="pa-2">
                                        時間: {{ timeSelect }}
                                      </div>
                                      <div class="pa-2">
                                        注文内容:
                                        {{ menusText }}
                                      </div>
                                    </v-card-text>
                                    <v-card-actions>
                                      <v-btn text @click="dialog.value = false"
                                        >キャンセル</v-btn
                                      >
                                      <v-spacer></v-spacer>
                                      <v-btn
                                        color="primary"
                                        @click="sendReservation()"
                                        >予約を確定</v-btn
                                      >
                                    </v-card-actions>
                                  </v-card>
                                </template>
                              </v-dialog>
                            </v-col>
                          </v-row>

                          <v-btn color="primary" @click="sendButtonClicked()">
                            確認
                          </v-btn>

                          <v-btn text @click="e1 = 2"> キャンセル </v-btn>
                        </v-stepper-content>
                      </v-stepper-items>
                    </v-stepper>

                    <!-- <div>
                      {{ inputNameText }}
                    </div> -->

                    <!-- <div class="text-center mt-3">
                      <v-btn color="primary" @click="sendButtonClicked()"
                        >予約する</v-btn
                      >
                    </div> -->
                  </v-card-text>
                </v-card>
              </div>
            </div>
          </v-container>
        </v-main>
      </v-app>
    </div>
    <%- include("./common/footer") %>
    <div id="fb-root"></div>
    <script
      async
      defer
      crossorigin="anonymous"
      src="https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v11.0"
      nonce="WGPn0m2J"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.x/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vuetify@2.x/dist/vuetify.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
      // function sendButtonClicked(){
      //     var elem = document.getElementById('test1')
      //     elem.innerText = "変更後の文字"
      //     var elem2 = document.getElementById('test2')
      //     elem2.innerText = "変更後の文字"
      //     // alert("押された" + elem.innerText)
      // }
      new Vue({
        el: "#app",
        vuetify: new Vuetify(),
        // 予約ステップのスクリプト
        data() {
          return {
            e1: 1,
            inputNameText: "",
            inputTellText: "",
            // カレンダーのスクリプト
            date: "2021-09-01",
            //時間選択のスクリプト
            timeSelect: "",
            times: [
              "17:00 ~ 17:30",
              "17:30 ~ 18:00",
              "18:00 ~ 18:30",
              "18:30 ~ 19:00",
              "19:00 ~ 19:30",
              "19:30 ~ 20:00",
            ],
            // メニュー選択のスクリプト
            menus: [
              //  {  name: "かわ",count: "1人前" },
              //  {  name: "きも",count: "1人前" },
              //  {  name: "ずり",count: "1人前" },
              //  {  name: "しんぞう",count: "1人前" },
            ],
            menuSelect: "",
            numberSelect: "",
            items_numbers: [
              "1人前",
              "2人前",
              "3人前",
              "4人前",
              "5人前",
              "6人前",
              "7人前",
              "8人前",
              "9人前",
              "10人前",
            ],
            items_menu: [
              "かわ",
              "きも",
              "ずり",
              "しんぞう",
              "なんこつ",
              "玉ひも",
              "せぎみ",
              "ねぎみ",
              "つくね",
              "せせり",
            ],
            isOpenDialog: false,
          };
        },
        computed: {
          menusText() {
            if (this.menus.length == 0) return "なし";
            return this.menus.map((v) => v.name + ":" + v.count).join(",");
          },
        },
        methods: {
          //カレンダーのメソッド（定休日以外選択可）
          allowedDates(val) {
            const dates = new Date(val);
            const result = dates.getDay();
            if (result == 2) {
              return false;
            } else {
              return true;
            }
          },
          sendButtonClicked() {
            if (this.menus.length == 0) {
              alert("メニューを選択してください。");
            } else {
              this.isOpenDialog = true;
            }
          },
          addItemToCard() {
            try {
              if (!this.menuSelect)
                throw new Error("メニューが選択されていません。");
              if (!this.numberSelect)
                throw new Error("数量が選択されていません。");
              this.menus.push({
                name: this.menuSelect,
                count: this.numberSelect,
              });
              this.menuSelect = "";
              this.numberSelect = "";
            } catch (err) {
              alert(err.message);
            }
          },
          step1Next() {
            // フォームの入力の有無を判別
            try {
              if (!this.inputNameText)
                throw new Error("名前を入力してください");
              if (!this.inputTellText)
                throw new Error("電話番号を入力してください");
              if (!/^[0-9-]+$/.test(this.inputTellText))
                throw new Error("半角数字を入力してください。");
              this.e1 = 2;
            } catch (err) {
              alert(err.message);
            }

            // if (this.inputNameText == "" || this.inputTellText == "") {
            //   alert("必須項目をご入力ください。");
            //   // 電話番号が数字であるか判別
            // } else if (isNaN(this.inputTellText) == false) {
            //   this.e1 = 2;
            // } else {
            //   alert("半角数字を入力してください。");
            // }
          },
          step2Next() {
            console.log(this.timeSelect);
            if (this.timeSelect == "") {
              console.log("呼ばれた1。");
              alert("日程と時間を選択してください。");
            } else if (this.timeSelect != "") {
              console.log("呼ばれた2。");
              this.e1 = 3;
            }
          },
          async sendReservation() {
            try {
              const { data } = await axios.post("/api/reservation", {
                name: this.inputNameText,
                tell: this.inputTellText,
                date: this.date,
                time: this.timeSelect,
                menu: this.menus,
              });
              console.log(data);
            } catch (err) {
              alert(err.message);
            }
          },
        },
      });
    </script>
  </body>
</html>
